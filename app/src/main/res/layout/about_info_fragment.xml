<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/question_application"
            android:background="@color/colorPrimaryDark"
            android:padding="20dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="#ffffff"
                android:text="Is our app useful?"
                android:textSize="18dp"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/question_no"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Not really"
                    android:textSize="16dp"
                    android:textAllCaps="false"
                    android:layout_marginRight="15dp"/>

                <Button
                    android:id="@+id/question_yes"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Yes!"
                    android:textSize="16dp"
                    android:textAllCaps="false"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/rate_application"
            android:background="@color/colorPrimaryDark"
            android:padding="20dp"
            android:visibility="gone"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="#ffffff"
                android:text="How about a rating on the App Store, then?"
                android:textSize="18dp"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/rating_no"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="No, thanks"
                    android:textSize="16dp"
                    android:textAllCaps="false"
                    android:layout_marginRight="15dp"/>

                <Button
                    android:id="@+id/rating_yes"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Ok, sure"
                    android:textSize="16dp"
                    android:textAllCaps="false"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/feedback_application"
            android:background="@color/colorPrimaryDark"
            android:padding="20dp"
            android:visibility="gone"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="#ffffff"
                android:text="Would you mind giving us some feedback?"
                android:textSize="18dp"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/feedback_no"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="No, thanks"
                    android:textSize="16dp"
                    android:textAllCaps="false"
                    android:layout_marginRight="15dp"/>

                <Button
                    android:id="@+id/feedback_yes"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Ok, sure"
                    android:textSize="16dp"
                    android:textAllCaps="false"/>
            </LinearLayout>

        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Who we are? "
            android:padding="10dp"
            android:gravity="center_horizontal"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:background="@color/colorPrimary"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="#000000"
            android:gravity="left"
            android:layout_marginLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginTop="20dp"
            android:lineSpacingExtra="3dp"
            android:text="Parents Voice was created by Parents for parents, the organisation works around four main Tiers which can affect young people as they go through transition from primary and during secondary school years, they are as follows…. "
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="#000000"
            android:gravity="left"
            android:layout_marginLeft="30dp"
            android:paddingRight="15dp"
            android:layout_marginTop="10dp"
            android:text="&#8226;    Cannabis induced psychosis"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="#000000"
            android:gravity="left"
            android:layout_marginLeft="30dp"
            android:paddingRight="15dp"
            android:layout_marginTop="10dp"
            android:text="&#8226;    Sexual exploitation"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="#000000"
            android:gravity="left"
            android:layout_marginLeft="30dp"
            android:paddingRight="15dp"
            android:layout_marginTop="10dp"
            android:text="&#8226;    Domestic violence in teen relationships"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="#000000"
            android:gravity="left"
            android:layout_marginLeft="30dp"
            android:paddingRight="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:text="&#8226;    Gang affiliation"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="#000000"
            android:gravity="left"
            android:layout_marginLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginBottom="20dp"
            android:text="Parents Voice urges all parents/carers to monitor as best they can the contents of their child/young person’s room and social media."
            />

        <TextView
            android:id="@+id/aims_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:textColor="#000000"
            android:gravity="left"
            android:layout_marginLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginBottom="20dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="#000000"
            android:gravity="left"
            android:layout_marginLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginBottom="20dp"
            android:text="HELP PARENTS BETTER UNDERSTAND THE RISKS OF YOUTH CULTURE"
            />

        <TextView
            android:id="@+id/objective_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:textColor="#000000"
            android:gravity="left"
            android:layout_marginLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginBottom="20dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="#000000"
            android:gravity="left"
            android:layout_marginLeft="30dp"
            android:paddingRight="15dp"
            android:layout_marginBottom="20dp"
            android:text="&#8226;    Engage, enable and empower parents to better understand the risks associated with youth culture"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="#000000"
            android:gravity="left"
            android:layout_marginLeft="30dp"
            android:paddingRight="15dp"
            android:layout_marginBottom="20dp"
            android:text="&#8226;    Advise on ways to spot the signs at an early stage and how to intervene"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="#000000"
            android:gravity="left"
            android:layout_marginLeft="30dp"
            android:paddingRight="15dp"
            android:text="&#8226;    To provide information of relevant organisations parents/carers can contact for advice, guidance and or immediate help and support for them and their child/young person"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="#000000"
            android:gravity="left"
            android:layout_marginLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:text="The Parents Voice Tool Kit offers suggestions on ways to identify potential risks and advice on where to go for further support.  If you have any concerns about your child/young person, please talk to someone that is qualified in the area of concern as outlined on the agency page."
            />




        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="How to book a session? "
            android:padding="10dp"
            android:gravity="center_horizontal"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:background="@color/colorPrimary"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="#000000"
            android:gravity="left"
            android:layout_marginLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginTop="20dp"
            android:lineSpacingExtra="3dp"
            android:text="We know that parents are often the first to be blamed for their child’s behaviour, so it is our aim to provide a safe, secure, confidential and non-judgemental space in any community where parents/carers can be empowered and educated in regards to the increased risks within youth culture."
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="#000000"
            android:gravity="left"
            android:layout_marginLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginTop="20dp"
            android:lineSpacingExtra="3dp"
            android:text="Group sessions are based around a person centred holistic approach, this creates trust and cohesion and allows us to offer practical advice as well as providing referral pathways to the relevant services."
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="#000000"
            android:gravity="left"
            android:layout_marginLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:lineSpacingExtra="3dp"
            android:text="We are a confidential service and follow safeguarding policies and procedures, if you would like Parents Voice to attend your community centre, church or organisation please contact us, if you would like to attend future holistic sessions please email us and we will add you to our database and keep you informed of upcoming events and sessions as well as providing you with a newsletter every other month"
            />


    </LinearLayout>

</ScrollView>